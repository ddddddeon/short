{
  "name": "short",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run format:fix; npm install; npm run compile; npm run docker",
    "compile": "./node_modules/.bin/tsc -b --verbose --pretty",
    "docker": "npm run docker:build; npm run docker:push",
    "docker:build": "docker build --tag dddeon/short .",
    "docker:push": "docker push dddeon/short",
    "kube": "npm run kube:redis; npm run kube:short",
    "kube:redis": "kubectl create -f redis.yaml",
    "kube:short": "kubectl create -f short.yaml",
    "kube:delete": "kubectl delete -f short.yaml; kubectl delete -f redis.yaml",
    "format": "./node_modules/.bin/prettier -c ./src",
    "format:fix": "./node_modules/.bin/prettier -w ./src",
    "start": "node dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.3",
    "mongodb": "^4.4.1",
    "redis": "^4.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/redis": "^4.0.11",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2"
  }
}
